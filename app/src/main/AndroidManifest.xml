<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.classscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StudentListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditStudentInfo"
            android:parentActivityName=".StudentListActivity"/>

        <provider
            android:name=".data.StudentProvider"
            android:authorities="com.example.android.classscheduler"
            android:exported="false" />

        <activity
            android:name=".StudentProfile"
            android:label="@string/title_activity_student_profile"
            android:parentActivityName=".StudentListActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>